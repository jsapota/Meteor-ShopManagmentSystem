.filters
  background: white
  padding-left: 2 em
  .products
    background: white
  .listOfCategories
    font-size: 1.2 em
  ul
    list-style-type: none
  hr
    border-color: gray
  button
    background-color: transparent
    border: none
    padding: 0.5em 0.5em
    text-align: center
    text-decoration: none
    display: block
  button:hover
    color: gray
  .categoryButton
    text-transform: capitalize
    &:hover
      padding-left: 1em
  input[type="checkbox"]
    display: none
  input[type="checkbox"] + label span
    display: inline-block
    padding-left: 2em
    line-height:22px
    height:22px
    margin:0.2em
    vertical-align:middle
    font-weight: normal
    background: url(http://csscheckbox.com/checkboxes/u/csscheckbox_ece132b80c71fbeebe8df571c3f59c58.png) 0 0 no-repeat
  input[type="checkbox"] + label span:hover
    color: gray
  input[type="checkbox"]:checked + label span
    background: url(http://csscheckbox.com/checkboxes/u/csscheckbox_ece132b80c71fbeebe8df571c3f59c58.png) 0 -22px no-repeat
    color: orange





