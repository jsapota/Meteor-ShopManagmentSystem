.footer-distributed
  background-color: #3b2637
  box-shadow: 0 1px 1px 0 rgba(0, 0, 0, 0.2)
  box-sizing: border-box
  width: 100%
  font: bold 16px sans-serif
  text-align: left
  padding: 50px 60px 40px
  overflow: hidden

  h3
    color: #ffffff
    font: normal 36px 'Cookie', cursive
    margin: 0 0 10px
    img
      margin-left: 25px
      width: 256px
      height: 101px


  .footer-links
    color: #ffffff
    font-size: 20px
    font-weight: normal
    padding: 0
    a
      display: inline-block
      line-height: 1.8
      position: relative
      text-decoration: none
      color: inherit
      &:after
        content: ''
        position: absolute
        bottom: 0
        left: 0
        width: 0%
        border-bottom: 2px solid #ffffff
        transition: 0.4s
      &:hover:after
        width: 100%

  .footer-company-name
    color: #8f9296
    font-size: 14px
    font-weight: normal
    float: left

  .footer-icons
    margin-top: 40px
    a
      display: inline-block
      width: 35px
      height: 35px
      cursor: pointer
      background-color: #60425C
      border-radius: 2px
      font-size: 20px
      color: #ffffff
      text-align: center
      line-height: 35px
      margin-right: 3px
      margin-bottom: 5px


  .footer-left
    display: inline-block
    float: left

  .footer-right
    float: right
    display: inline-block
    p
      font-size: 30px
      display: inline-block
      vertical-align: top
      color: #ffffff


  form
    input, textarea
      display: block
      border-radius: 3px
      box-sizing: border-box
      background-color: #231721
      box-shadow: 0 1px 0 0 rgba(255, 255, 255, 0.1)
      border: none
      resize: none
      font: inherit
      font-size: 14px
      font-weight: normal
      color: #d1d2d2
      width: 400px
      padding: 18px


  ::-webkit-input-placeholder
    color: #5c666b

  ::-moz-placeholder
    color: #5c666b
    opacity: 1

  :-ms-input-placeholder
    color: #5c666b

  form
    input
      height: 55px
      margin-bottom: 15px

    textarea
      height: 100px
      margin-bottom: 20px

    button
      border-radius: 3px
      background-color: #60425C
      color: #ffffff
      border: 0
      padding: 15px 50px
      font-weight: bold
      float: none




