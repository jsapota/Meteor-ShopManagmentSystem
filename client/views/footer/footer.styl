@media (max-width: 1000px)
  .footer-distributed
    font: bold 14px sans-serif
    .footer-company-name
      font-size: 12px

    form
      input, textarea
        width: 250px

      button
        padding: 10px 35px





@media (max-width: 800px)
  .footer-distributed
    padding: 30px
    .footer-left, .footer-right
      float: none
      max-width: 300px
      margin: 0 auto

    .footer-left
      margin-bottom: 40px

    form
      margin-top: 30px
      display: block
      button
        float: none
