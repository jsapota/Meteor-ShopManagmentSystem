.dropdown-menu a
  color: black
  text-decoration: none
  display: block
  width: inherit
  &:hover
    background-color: #f1f1f1

.dropdown:hover .dropdown-menu
  display: block


.dropdown
  position: relative
  display: inline-block

.nav navbar-nav
  ul
    list-style: none
    padding: 0
    margin: 0
    display: inline-block
    background: #ddd
    border-radius: 5px

    li
      float: left
      text-transform: uppercase
      font-size: 14px
      cursor: pointer

      &:hover
        background: #d5d5d5
        border-radius: 5px;


  &:hover
    background: #606060
  &:last-child
    border-radius: 0px 0px 5px 5px

ul.dropdown li
  display:none

li:hover > ul.dropdown li
  display: block



.navbar
  img
    width: 128px
    height: 50px
    padding-right: 5%

.navbar-header
  box-sizing: inherit
