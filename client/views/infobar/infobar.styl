.infoBarContainer
  display: inline-block
  padding: 1em
  .infoBarElement
    padding-right: 1em
    padding-left: 1em
    padding-bottom: 0.6em
    padding-top: 0.6em
    margin-left: 1em
    text-decoration: none
    font-size: 1.2em
    color: black
    border-style: solid
    border-width: 0.1em
    border-color: black

    .infoBarElement:hover
      color: white
      background-color: black


  .infoBarTitle
    font-weight: bolder
    padding-right: 2em
    font-size 1.5em






